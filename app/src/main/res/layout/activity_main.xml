<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e6e4e4"
    tools:context="com.example.eren.allpages.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Search"
        android:ems="10"
        android:id="@+id/editTextSearch"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        app:srcCompat="@mipmap/ankara"
        android:layout_marginTop="27dp"
        android:id="@+id/imageButtonAnkara"
        android:layout_height="100dp"
        android:layout_width="180dp"
        android:layout_below="@+id/editTextSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="false"
        android:adjustViewBounds="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/izmir2"
        android:id="@+id/imageButtonizmir"
        android:layout_marginTop="32dp"
        android:layout_alignTop="@+id/imageButtonAnkara"
        android:layout_toRightOf="@+id/imageButtonAnkara"
        android:layout_toEndOf="@+id/imageButtonAnkara"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:cropToPadding="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/istanbul1"
        android:layout_marginTop="28dp"
        android:id="@+id/imageButtonIstanbul"
        android:layout_below="@+id/imageButtonAnkara"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/antep1"
        android:id="@+id/imageButtonAntep"
        android:layout_below="@+id/imageButtonIstanbul"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/bursa1"
        android:layout_below="@+id/imageButtonizmir"
        android:layout_alignLeft="@+id/imageButtonizmir"
        android:layout_alignStart="@+id/imageButtonizmir"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:id="@+id/imageButtonSearch"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:background="#e6e4e4"
        android:layout_alignTop="@+id/editTextSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
